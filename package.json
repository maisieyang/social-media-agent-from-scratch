{
  "name": "social-media-agent-from-scratch",
  "version": "1.0.0",
  "description": "AI-driven social media content automation system built with LangGraph",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "langgraph:in_mem:up": "npx @langchain/langgraph-cli@latest dev --port 2024",
    "langgraph:up": "npx @langchain/langgraph-cli@latest up"
  },
  "dependencies": {
    "@langchain/core": "^0.3.49",
    "@langchain/langgraph": "^0.2.68",
    "@langchain/openai": "^0.5.1",
    "@mendable/firecrawl-js": "^4.11.2",
    "@octokit/rest": "^22.0.1",
    "cheerio": "^1.1.2",
    "playwright": "^1.57.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
